#!/bin/bash -e
echo "Making feedhenry cartridge"

case "$1" in
  -v|--version)
    version="$2"
esac

# Parse arguments
source "${OPENSHIFT_FEEDHENRY_DIR}/lib/util"
parse_args $@

# Don't set -u until after the above arg parsing is complete
set -u

# Copy the version specific files to nodejs directory
shopt -s dotglob
for dir in configuration etc; do
    mkdir -p $OPENSHIFT_FEEDHENRY_DIR/$dir
    cp -Lr $OPENSHIFT_FEEDHENRY_DIR/versions/$version/$dir/* $OPENSHIFT_FEEDHENRY_DIR/$dir 
done

###
pushd $OPENSHIFT_FEEDHENRY_DIR > /dev/null
for dir in conf sessions run tmp; do
    mkdir -p $dir
done
popd > /dev/null
