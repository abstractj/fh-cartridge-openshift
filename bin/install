#!/bin/bash
#set -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source "${OPENSHIFT_FEEDHENRY_DIR}/lib/util"
source "${OPENSHIFT_FEEDHENRY_DIR}/lib/nodejs_context"

case "$1" in
  -v|--version)
    version="$2"
esac

## npm link
link_global_modules $version

echo "$version" > $OPENSHIFT_FEEDHENRY_DIR/env/OPENSHIFT_FEEDHENRY_VERSION
update-configuration $version
